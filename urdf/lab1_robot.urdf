<?xml version="1.0"?> 
<robot name="lab1_bot"> 
 
  <!-- Simple materials --> 
  <material name="mat_blue"><color rgba="0.1 0.3 0.9 1.0"/></material> 
  <material name="mat_black"><color rgba="0.05 0.05 0.05 1.0"/></material> 
  <material name="mat_grey"><color rgba="0.6 0.6 0.6 1.0"/></material> 
 
  <!-- Base chassis --> 
  <link name="base_link"> 
    <inertial> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <mass value="5.0"/> 
      <inertia ixx="0.045" ixy="0.0" ixz="0.0" iyy="0.066" iyz="0.0" izz="0.090"/> 
    </inertial> 
    <visual> 
      <origin xyz="0 0 0.06" rpy="0 0 0"/> 
      <geometry><box size="0.4 0.3 0.12"/></geometry> 
      <material name="mat_blue"/> 
    </visual> 
    <collision> 
      <origin xyz="0 0 0.06" rpy="0 0 0"/> 
      <geometry><box size="0.4 0.3 0.12"/></geometry> 
    </collision> 
  </link> 
 
  <!-- Left wheel --> 
  <link name="left_wheel_link"> 
    <inertial> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <mass value="0.5"/> 
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/> 
    </inertial> 
    <visual> 
      <origin xyz="0 0 0" rpy="0 1.5708 0"/> 
      <geometry><cylinder radius="0.06" length="0.03"/></geometry> 
      <material name="mat_black"/> 
    </visual> 
    <collision> 
      <origin xyz="0 0 0" rpy="0 1.5708 0"/> 
      <geometry><cylinder radius="0.06" length="0.03"/></geometry> 
    </collision> 
  </link> 
 
  <!-- Right wheel --> 
  <link name="right_wheel_link"> 
    <inertial> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <mass value="0.5"/> 
      <inertia ixx="0.001" ixy="0.0" ixz="0.0" iyy="0.001" iyz="0.0" izz="0.001"/> 
    </inertial> 
    <visual> 
      <origin xyz="0 0 0" rpy="0 1.5708 0"/> 
      <geometry><cylinder radius="0.06" length="0.03"/></geometry> 
      <material name="mat_black"/> 
    </visual> 
    <collision> 
      <origin xyz="0 0 0" rpy="0 1.5708 0"/> 
      <geometry><cylinder radius="0.06" length="0.03"/></geometry> 
    </collision> 
  </link> 
 
  <!-- Passive front caster --> 
  <link name="front_caster_link"> 
    <inertial> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <mass value="0.2"/> 
      <inertia ixx="0.0002" ixy="0.0" ixz="0.0" iyy="0.0002" iyz="0.0" izz="0.0002"/> 
    </inertial> 
    <visual> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry><sphere radius="0.03"/></geometry> 
      <material name="mat_grey"/> 
    </visual> 
    <collision> 
      <origin xyz="0 0 0" rpy="0 0 0"/> 
      <geometry><sphere radius="0.03"/></geometry> 
    </collision> 
  </link> 
 
  <!-- Joints --> 
  <joint name="left_wheel_joint" type="continuous"> 
    <origin xyz="0.0 0.15 0.06" rpy="0 0 0"/> 
    <parent link="base_link"/> 
    <child link="left_wheel_link"/> 
    <axis xyz="0 1 0"/> 
  </joint> 
 
  <joint name="right_wheel_joint" type="continuous"> 
    <origin xyz="0.0 -0.15 0.06" rpy="0 0 0"/> 
    <parent link="base_link"/> 
    <child link="right_wheel_link"/> 
    <axis xyz="0 1 0"/> 
  </joint> 
 
  <joint name="front_caster_joint" type="fixed"> 
    <origin xyz="0.15 0 -0.03" rpy="0 0 0"/> 
    <parent link="base_link"/> 
    <child link="front_caster_link"/> 
  </joint> 
 
  <!-- Footprint (fixed helper link) --> 
  <link name="base_footprint"/> 
  <joint name="base_footprint_joint" type="fixed"> 
    <origin xyz="0 0 0" rpy="0 0 0"/> 
    <parent link="base_footprint"/> 
    <child link="base_link"/> 
  </joint> 
 
</robot>